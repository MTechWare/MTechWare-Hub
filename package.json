{
  "name": "mtechware-hub",
  "version": "0.0.1",
  "main": "src/main.js",
  "description": "MTechware's Hub - A modern application for managing and installing your favorite apps",
  "author": "MTechware",
  "license": "MIT",
  "scripts": {
    "start": "electron .",
    "dev": "electron . --dev",
    "build": "electron-builder --win --x64",
    "build:portable": "electron-builder --win --x64",
    "dist": "electron-builder --win --x64"
  },
  "build": {
    "appId": "https://mtechware.github.io/",
    "productName": "MTechware's Hub",
    "icon": "src/assets/images/icon.ico",
    "copyright": "Copyright Â© 2025 MTechware",
    "win": {
      "target": [
        {
          "target": "portable",
          "arch": ["x64"]
        }
      ],
      "artifactName": "${productName}.${ext}",
      "publisherName": "MTechware",
      "requestedExecutionLevel": "asInvoker"
    },
    "portable": {
      "artifactName": "${productName} v${version} Portable.${ext}"
    },
    "directories": {
      "output": "dist"
    },
    "files": [
      "src/**/*",
      "!src/**/*.map",
      "!**/node_modules/*/{CHANGELOG.md,README.md,README,readme.md,readme}",
      "!**/node_modules/*/{test,__tests__,tests,powered-test,example,examples}",
      "!**/node_modules/*.d.ts",
      "!**/node_modules/.bin",
      "!**/*.{iml,o,hprof,orig,pyc,pyo,rbc,swp,csproj,sln,xproj}",
      "!.editorconfig",
      "!**/._*",
      "!**/{.DS_Store,.git,.hg,.svn,CVS,RCS,SCCS,.gitignore,.gitattributes}",
      "!**/{__pycache__,thumbs.db,.flowconfig,.idea,.vs,.nyc_output}",
      "!**/{appveyor.yml,.travis.yml,circle.yml}",
      "!**/{npm-debug.log,yarn.lock,.yarn-integrity,.yarn-metadata.json}"
    ],
    "asar": true,
    "compression": "maximum"
  },
  "devDependencies": {
    "electron": "^28.0.0",
    "electron-builder": "^24.0.0"
  },
  "dependencies": {
    "electron-store": "^8.1.0"
  }
}
